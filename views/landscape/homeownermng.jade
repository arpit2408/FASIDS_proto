  script(src=angularJS_src)
  script(src="#{glblprefix}/js/landscape/polygonManagerApp.js", data-glblprefix=glblprefix)
  script(src="#{glblprefix}/js/landscape/pmaService.js", data-glblprefix=glblprefix)  


